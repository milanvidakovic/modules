TARGET=sprites
LIB=/mnt/c/Prj/Altera/C/moxiebox/modules/lib
INCLUDE=/mnt/c/Prj/Altera/C/moxiebox/modules/include

FILES = $(TARGET) $(LIB)/mouse $(LIB)/sprintf $(LIB)/string $(LIB)/stdio $(LIB)/graphics $(LIB)/floatimpl

ASM_LIST := $(foreach file,$(FILES), $(file).s) $(LIB)/consts.s

all: compile assemble copy

compile:
	@for file in $(FILES); do \
    moxiebox-gcc -I$(INCLUDE) -fsigned-char -S $${file}.c -o $${file}.s -fverbose-asm; \
	done
	
assemble:
	java -jar ../FPGA_Assembler.jar -s -b=197632 $(ASM_LIST)

copy:
	cp $(TARGET).bin ../
		